  <script type="text/html" id="my-file">
    <div class="input-group read-view" style="display:none">
      <input class="form-control" type="text" name="myfile[]" data-bind="value: field.filename" disabled="disabled" />
      <div class="input-group-btn">
        <a href="#" class="btn btn-primary btn-lg" target="_blank" data-bind="attr: {href: field.permalink}"><i class="glyphicon glyphicon-eye-open"></i> Open</a>
        <a href="#" class="btn btn-danger btn-lg btn-fileinput-remove"><i class="glyphicon glyphicon-remove"></i> Remove</a>
      </div>
    </div>
    <input type="file" name="myfile[]" data-bind="uploadFile: field, fileType: fileType, value: field"/>
    <span class="help-block" data-bind="visible: field.hasError, text: field.validationMessage"></span>
  </script>