{% extends '::dashboard.html.twig' %}

{% block main %}
        <div class="row">
          <div class="col-md-12">
              <div class="pull-left">
                <a href="{{ path('app_backend_tenancy_index') }}" class="btn btn-default btn-lg"><i class="glyphicon glyphicon-chevron-left"></i><span> Back to tenancies list</span></a>
              </div>
              <div class="pull-right">
                  <a href="{{ path('app_backend_tenancy_edit',{"id": tenancy.id}) }}" class="btn btn-primary btn-lg"><i class="glyphicon glyphicon-pencil"></i><span> Edit tenancy</span></a>
              </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
              <div class="pull-left">
                <h1 class="page-header">Tenancy details</h1>
              </div>
          </div>
        </div>
        <div class="row">
          <div class="box">
            <ul class="nav nav-tabs" role="tablist">
                <li role="presentation" class="active"><a href="#overview" aria-controls="overview" role="tab" data-toggle="tab">Overview</a></li>
                <li role="presentation"><a href="#breakdowns" aria-controls="breakdowns" role="tab" data-toggle="tab">View rent breakdowns</a></li>
            </ul>
            <div class="tab-content margin-top-20">
              <div role="tabpanel" class="tab-pane active" id="overview">
                <div class="row">
                  <div class="col-xs-12">
                    <form class="form-horizontal">
                      <div id="fields-container">
                        <!-- BASIC INFORMATION -->
                        <fieldset id="basic-information-fieldset">
                          <legend>Basic information</legend>
                          <div class="form-group form-group-lg">
                              <label class="col-sm-3 control-label" for="tenancy_start_date">Start date</label>
                              <div class="col-sm-6 control-readonly">
                                <span data-bind="text: fields.start_date"></span>
                              </div>
                          </div>
                          <div class="form-group form-group-lg">
                              <label class="col-sm-3 control-label" for="tenancy_end_date">End date</label>
                              <div class="col-sm-6 control-readonly">
                                <span data-bind="text: fields.end_date"></span>
                              </div>
                          </div>
                          <div class="form-group form-group-lg">
                              <label class="col-sm-3 control-label" for="tenancy_review_date">Review date</label>
                              <div class="col-sm-6 control-readonly">
                                <span data-bind="text: fields.review_date"></span>
                              </div>
                          </div>
                          <div class="form-group form-group-lg">
                              <label class="col-sm-3 control-label" for="tenancy_review_date">Tenancy type</label>
                              <div class="col-sm-6 control-readonly">
                                <span data-bind="text: fields.tenancy_type"></span>
                              </div>
                          </div>
                          <div class="form-group form-group-lg">
                              <label class="col-sm-3 control-label" for="tenancy_property">Property</label>
                              <div class="col-sm-6 control-readonly">
                                <span data-bind="text: fields.property.fulltitle"></span>
                            </div>
                          </div>
                          <div class="form-group form-group-lg">
                            <label class="col-sm-3 control-label" for="tenancy_review_date">Tenants</label>
                              <div class="col-sm-6">
                                <div class="panel panel-default">
                                  <div class="panel-body">
                                    <table class="table">
                                      <thead>
                                        <tr>
                                          <th>Id</th>
                                          <th>Name</th>
                                        </tr>
                                      </thead>
                                      <tbody data-bind="foreach: fields.tenants">
                                        <tr>
                                          <td><span data-bind="text: id"></span></td>
                                          <td><span data-bind="text: name"></span></td>
                                        </tr>
                                      </tbody>
                                    </table>
                                  </div>
                                </div>
                              </div>
                          </div>
                        </fieldset>

                        <!-- FILES -->
                        <fieldset id="basic-fieldset">
                          <legend>Files</legend>
                          <div class="form-group form-group-lg">
                            <label class="col-sm-3 control-label">Upload tenancy agreement</label>
                              <div class="col-sm-6">
                                <div class="input-group">
                                  <input class="form-control" type="text" name="myfile[]" data-bind="value: fields.tenancy_agreement_file.filename" disabled="disabled" />
                                  <div class="input-group-btn">
                                    <a href="#" class="btn btn-primary btn-lg" target="_blank" data-bind="attr: {href: fields.tenancy_agreement_file.permalink}"><i class="glyphicon glyphicon-eye-open"></i> Open</a>
                                  </div>
                                </div>
                              </div>
                          </div>
                          <div class="form-group form-group-lg">
                            <label class="col-sm-3 control-label">Upload easy read tenancy agreement</label>
                              <div class="col-sm-6">
                                <div class="input-group" data-bind="visible: fields.tenancy_agreement_visual_file.filename">
                                  <input class="form-control" type="text" name="myfile[]" data-bind="value: fields.tenancy_agreement_visual_file.filename" disabled="disabled" />
                                  <div class="input-group-btn">
                                    <a href="#" class="btn btn-primary btn-lg" target="_blank" data-bind="attr: {href: fields.tenancy_agreement_visual_file.permalink}"><i class="glyphicon glyphicon-eye-open"></i> Open</a>
                                  </div>
                                </div>
                              </div>
                          </div>
                          <div class="form-group form-group-lg">
                            <label class="col-sm-3 control-label">Upload service level agreement</label>
                              <div class="col-sm-6">
                                <div class="input-group" data-bind="visible: fields.service_level_agreement_file.filename">
                                  <input class="form-control" type="text" name="myfile[]" data-bind="value: fields.service_level_agreement_file.filename" disabled="disabled" />
                                  <div class="input-group-btn">
                                    <a href="#" class="btn btn-primary btn-lg" target="_blank" data-bind="attr: {href: fields.service_level_agreement_file.permalink}"><i class="glyphicon glyphicon-eye-open"></i> Open</a>
                                  </div>
                                </div>
                              </div>
                          </div>
                        </fieldset>

                        <!-- ADMINISTRATION -->
                        <fieldset id="administration-fieldset">
                          <legend>Administration</legend>
                          <div class="form-group form-group-lg">
                              <label class="col-sm-3 control-label" for="tenancy_owner">Owner</label>
                              <div class="col-sm-6 control-readonly">
                                <span data-bind="text: fields.owner.fullname"></span>
                            </div>
                          </div>
                            <div class="form-group form-group-lg" data-bind="if: fields.created_by">
                                <label class="col-sm-3 control-label" for="tenancy_created_by">Created by</label>
                                <div class="col-sm-6 control-readonly">
                                <span id="tenancy_created_by" data-bind="text: fields.created_by"></span> (<span data-bind="text: fields.created_at"></span>)
                              </div>
                            </div>
                            <div class="form-group form-group-lg" data-bind="if: fields.updated_by">
                                <label class="col-sm-3 control-label" for="tenancy_updated_by">Updated by</label>
                                <div class="col-sm-6 control-readonly">
                                <span id="tenancy_updated_by" data-bind="text: fields.updated_by"></span> (<span data-bind="text: fields.updated_at"></span>)
                              </div>
                            </div>
                        </fieldset>
                      </div>
                    </form>
                  </div>
                </div>
              </div> <!-- overview tabpanel end -->

              <div role="tabpanel" class="tab-pane" id="breakdowns">
                  <div class="row">
                    <div class="col-xs-12">
                      <table id="table-breakdowns"></table>
                    </div>
                </div>
              </div> <!-- breakdowns tabpanel end -->

            </div> <!-- tab-content end -->
          </div> <!-- box end -->
        </div>
        <div class="row">
          <div class="col-md-12">
              <div class="pull-left">
                  <a href="{{ path('app_backend_tenancy_index') }}" class="btn btn-default btn-lg"><i class="glyphicon glyphicon-chevron-left"></i><span> Back to tenancies list</span></a>
              </div>
          </div>
        </div>
{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  <link href="{{ asset('css/dashboard.css') }}" rel="stylesheet" />
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  <script>
    define("static_data",function(require, exports, module){
      "use strict";
      var data = {};
      data.view = 'show';
      data.tenancy = {{ tenancy|serialize('json', context)|raw }};
      return data;

    });

    require(["/js/common.js"], function(common){
      require(['app/modules/tenancies/controller/show.controller']);
    });
  </script>
{% endblock %}




